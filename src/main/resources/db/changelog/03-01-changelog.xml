<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.31.xsd"
        objectQuotingStrategy="QUOTE_ONLY_RESERVED_WORDS">
    <changeSet id="1754228700262-1" author="camal">
        <createTable tableName="user_refresh_token">
            <column autoIncrement="true" name="id" type="BIGINT">
                <constraints nullable="false" primaryKey="true" primaryKeyName="pk_userrefreshtoken"/>
            </column>
            <column name="token" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="expiry_date" type="DATETIME">
                <constraints nullable="false"/>
            </column>
            <column name="user_id" type="BIGINT"/>
        </createTable>
    </changeSet>
    <changeSet id="1754228700262-2" author="camal">
        <createTable tableName="users">
            <column autoIncrement="true" name="id" type="BIGINT">
                <constraints nullable="false" primaryKey="true" primaryKeyName="pk_users"/>
            </column>
            <column name="full_name" type="VARCHAR(255)"/>
            <column name="email" type="VARCHAR(255)"/>
            <column name="local_date_time" type="DATETIME"/>
            <column name="password" type="VARCHAR(255)"/>
            <column name="role" type="VARCHAR(255)"/>
        </createTable>
    </changeSet>
    <changeSet id="1754228700262-3" author="camal">
        <addUniqueConstraint columnNames="token" constraintName="uc_userrefreshtoken_token"
                             tableName="user_refresh_token"/>
    </changeSet>
    <changeSet id="1754228700262-4" author="camal">
        <addUniqueConstraint columnNames="user_id" constraintName="uc_userrefreshtoken_user"
                             tableName="user_refresh_token"/>
    </changeSet>
    <changeSet id="1754228700262-5" author="camal">
        <addUniqueConstraint columnNames="email" constraintName="uc_users_email" tableName="users"/>
    </changeSet>
    <changeSet id="1754228700262-6" author="camal">
        <addUniqueConstraint columnNames="full_name" constraintName="uc_users_full_name" tableName="users"/>
    </changeSet>
    <changeSet id="1754228700262-7" author="camal">
        <addUniqueConstraint columnNames="password" constraintName="uc_users_password" tableName="users"/>
    </changeSet>
    <changeSet id="1754228700262-8" author="camal">
        <addForeignKeyConstraint baseColumnNames="user_id" baseTableName="user_refresh_token"
                                 constraintName="FK_USERREFRESHTOKEN_ON_USER" referencedColumnNames="id"
                                 referencedTableName="users"/>
    </changeSet>

</databaseChangeLog>